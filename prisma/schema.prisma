generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id      Int       @id @default(autoincrement())
  code    String    @unique
  name    String
  Borrow    Borrow[]
  Penalty Penalty[]
}

model Book {
  id     Int    @id @default(autoincrement())
  code   String @unique
  title  String
  author String
  stock  Int
  Borrow   Borrow[]
}

model Borrow {
  id         Int       @id @default(autoincrement())
  member     Int
  book       Int
  borrowAt   DateTime  @default(now())
  returnAt   DateTime?
  isReturned Boolean   @default(false)
  Member     Member    @relation(fields: [member], references: [id])
  Book       Book      @relation(fields: [book], references: [id])
}

model Penalty {
  id      Int      @id @default(autoincrement())
  member  Int
  startAt DateTime @default(now())
  endAt   DateTime @default(now())
  Member  Member   @relation(fields: [member], references: [id])
}
